<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >
    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Stunting"
        tools:targetApi="31" >
        <activity
            android:name=".ui.main.stunting.StuntingActivity"
            android:exported="false" />
        <!-- Splash Activity (Launcher) -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Authentication Activities -->
        <activity
            android:name=".ui.authentication.AuthenticationActivity"
            android:exported="false" /> <!-- Main Activities -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false" /> <!-- Profile Activities -->
        <activity
            android:name=".ui.main.profile.UserIdentityActivity"
            android:exported="false" /> <!-- Journal Activities -->
        <activity
            android:name=".ui.main.journal.JournalHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.journal.JournalDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.journal.AddJournalActivity"
            android:exported="false" /> <!-- News Activities -->
        <activity
            android:name=".ui.main.news.NewsDetailActivity"
            android:exported="false" />
    </application>

</manifest>